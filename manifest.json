{ 
    "manifest_version": 2,
    "name": "YSummarize",
    "description": "An extension to provide summarized transcript of a YouTube Subtitle eligible Video.",
    "version": "1.0",
    "permissions": ["tabs","activeTab","declarativeContent"],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/images/replacely16.png",
            "32": "images/images/replacely32.png",
            "48": "images/images/replacely48.png",
            "128": "images/images/replacely128.png"
        }
    },
    "icons": {
        "16": "images/images/replacely16.png",
        "32": "images/images/replacely32.png",
        "48": "images/images/replacely48.png",
        "128": "images/images/replacely128.png"
    },
    "content_scripts": [
        {
          "matches": ["https://www.youtube.com/*"],
          "js": ["contentScript.js"]
        }
      ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}